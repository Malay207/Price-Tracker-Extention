{
  "manifest_version": 3,
  "name": "Price-Traker",
  "version": "1.0.0",
  "description": "A simple price tracker used to track the all time lower price of Amazon, Flipkart, Ajio, and send notifications",
  "icons": {
    "48": "./images/icon48.png",
    "128": "./images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"   
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "./images/icon48.png",
      "128": "./images/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}